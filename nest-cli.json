{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/proyecto_nestjs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/proyecto_nestjs/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/proyecto_nestjs",
  "projects": {
    "proyecto_nestjs": {
      "type": "application",
      "root": "apps/proyecto_nestjs",
      "entryFile": "main",
      "sourceRoot": "apps/proyecto_nestjs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/proyecto_nestjs/tsconfig.app.json"
      }
    },
    "assignment": {
      "type": "application",
      "root": "apps/assignment",
      "entryFile": "main",
      "sourceRoot": "apps/assignment/src",
      "compilerOptions": {
        "tsConfigPath": "apps/assignment/tsconfig.app.json"
      }
    },
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "task-manager": {
      "type": "application",
      "root": "apps/task-manager",
      "entryFile": "main",
      "sourceRoot": "apps/task-manager/src",
      "compilerOptions": {
        "tsConfigPath": "apps/task-manager/tsconfig.app.json"
      }
    }
  }
}